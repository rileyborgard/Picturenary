<div>
    <center>
        <a href="/">
            <img src="client/img/logo.png"/><br>
        </a>
        <form class="registerform" method="post" action="/register">
            <div class="form-group">
                <span class="mylabel">Username:</span>
                <input class="myinput" type="text" placeholder="Username" name="username"/><br>
            </div>

            <div class="form-group">
                <span class="mylabel">Password:</span>
                <input class="myinput" type="password" placeholder="Password" name="password"/><br>
            </div>

            <div class="form-group">
                <span class="mylabel">Email:</span>
                <input class="myinput" type="text" placeholder="e-mail" name="email"><br>
            </div>
            <input class="mybutton" id="loginbutton" type="submit" value="Register"/><br>
        </form>

        <span class="mylabel">Already have an account? </span>
        <a href="/login">
            <input class="mybutton" id="gotologinbutton" type="button" value="Login"/>
        </a>
    </center>
</div>
