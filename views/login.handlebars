<form class="loginform" method="post" action="/login">
    <div class="form-group">
        <span class="mylabel">Username:</span>
        <input class="myinput" type="text" placeholder="Username" name="username"/><br>
    </div>
    <div class="form-group">
        <span class="mylabel">Password:</span>
        <input class="myinput" type="password" placeholder="Password" name="password"/><br>
    </div>
    <input class="mybutton" id="loginbutton" type="submit" value="Login"/><br>
</form>

<span class="mylabel">Don't have an account? </span>
<a href="/register">
    <input class="mybutton" id="gotoregisterbutton" type="button" value="Register"/>
</a>
